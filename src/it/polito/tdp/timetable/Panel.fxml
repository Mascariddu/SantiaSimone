               <content>
                  <HBox>
                     <children>
                        <VBox>
                           <children>
                              <Label text="Materie">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="5.0" />
                                 </VBox.margin>
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <ListView fx:id="listSubject" minHeight="523.0" onMouseClicked="#viewSubject" />
