                        <VBox>
                           <children>
                              <HBox>
                                 <children>
                                    <VBox>
                                       <children>
                                          <Label text="Codice Materia">
                                             <VBox.margin>
                                                <Insets bottom="20.0" top="5.0" />
                                             </VBox.margin>
                                          </Label>
                                          <Label text="Nome">
