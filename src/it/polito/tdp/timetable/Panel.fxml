                                 </VBox.margin>
                              </Label>
                              <ListView fx:id="listTeachersSub" disable="true" maxHeight="150.0" visible="false">
                                 <VBox.margin>
                                    <Insets right="5.0" />
                                 </VBox.margin>
                              </ListView>
                              <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="SOMETIMES">
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#doModifySub" text="Modifica">
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                    </Button>
                                    <Button cancelButton="true" mnemonicParsing="false" onAction="#clearSub" text="Pulisci">
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                    </Button>
                                    <Button mnemonicParsing="false" onAction="#addSub" text="Aggiungi Materia">
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </HBox>
                           </children>
                           <padding>
                              <Insets left="15.0" top="35.0" />
                           </padding>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
